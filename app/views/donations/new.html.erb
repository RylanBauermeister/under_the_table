<h2>New Donation</h2>
<%= form_for @donation do |f|%>
  <div>
    <%= f.label "Amount" %>
    <%= f.text_field :amount %>
  </div>

  <div>
    <%= f.label "message" %><br>
    <%= f.text_area :content %>
  </div>

  <div>
    <%= f.collection_select :receiver_id, @other_users, :id, :username, {:selected => @receiver_id} %><br>
  </div>


  <%= f.submit "Donate" %>
<% end %>
