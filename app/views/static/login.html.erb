<div class="centered">
  <h2 class="header">WELCOME</h2>
</div>

<% if flash[:message] %>
  <div class="alert"><%= flash[:message] %></div>
<% end %>

<div class="login_form">

  <%= form_with url:login_path do |f| %>
    <div class="login-form-items">
      <%= f.label "Username" %>
      <%= f.text_field :username %>
      <br>
      <%= f.label "Password" %>
      <%= f.password_field :password %>
    </div>
    <%= f.submit "Log In"%>
  <% end %>


  <div class="new-account-text">
    New to the site?  <span class="button"><%= link_to "Make a new account!", new_user_path %></span>
  </div>

</div>
